{
  "manifest_version": 2,
  "name": "onlydb-facebook",
  "version": "0.0.1",
  "browser_action": {},
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["content-scripts.css", "vendor/font-awesome.min.css"],
      "js": ["content-scripts.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "vendor/*"
  ],
  "permissions": [
    "history",
    "storage",
    "unlimitedStorage"
  ]
}
